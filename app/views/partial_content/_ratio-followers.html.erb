<div class="col-lg-4 col-xs-12 real-followers">
  <p class="p-2"><%= current_user&.active_friends.count || " " %></p>
  <span class="spangrey"><%= t '.Rfollow' %></span>
</div>

<div class="col-lg-8 col-xs-12 m-auto">
  <p class="percent"><%= (current_user&.active_friends.count.to_f / current_user&.friends.count * 100).round(2) %>%</p>
  <div class="progress m-3">
    <div class="progress-bar bg-warning" role="progressbar" style="width: <%= (current_user&.active_friends.count.to_f / current_user&.friends.count * 100).round(2) %>%" aria-valuenow="<%= (current_user&.active_friends.count.to_f / current_user&.friends.count * 100).round(2) %>" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-lg-4 col-xs-12 inactive-foll">
    <p class="p-2"><%= current_user&.inactive_friends.count || " " %></p>
    <span class="spangrey"><%= t '.Infollow' %></span>
  </div>
  <div class="col-lg-8 col-xs-12 m-auto">
    <p class="percent"><%= (current_user&.inactive_friends.count.to_f / current_user&.friends.count * 100).round(2) %>%</p>
    <div class="progress m-3">
      <div class="progress-bar bg-warning" role="progressbar" style="width: <%= (current_user&.inactive_friends.count.to_f / current_user&.friends.count * 100).round(2) %>%" aria-valuenow="<%= (current_user&.inactive_friends.count.to_f / current_user&.friends.count * 100).round(2) %>" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>
</div>