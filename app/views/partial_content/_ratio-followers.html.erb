<div class="col-lg-4 col-xs-12 real-followers">
  <p class="p-2"><%= @metrics[:active_friends] %></p>
  <span class="spangrey"><%= t '.Rfollow' %></span>
</div>

<div class="col-lg-8 col-xs-12 m-auto">
  <p class="percent"><%= @metrics[:active_friends_percentage] %>%</p>
  <div class="progress m-3">
    <div class="progress-bar bg-warning" role="progressbar" style="width: <%= @metrics[:active_friends_percentage] %>%" aria-valuenow="<%= @metrics[:active_friends_percentage] %>" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-lg-4 col-xs-12 inactive-foll">
    <p class="p-2"><%= @metrics[:inactive_friends] %></p>
    <span class="spangrey"><%= t '.Infollow' %></span>
  </div>
  <div class="col-lg-8 col-xs-12 m-auto">
    <p class="percent"><%= @metrics[:inactive_friends_percentage] %>%</p>
    <div class="progress m-3">
      <div class="progress-bar bg-warning" role="progressbar" style="width: <%= @metrics[:inactive_friends_percentage] %>%" aria-valuenow="<%= @metrics[:inactive_friends_percentage] %>" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>
</div>
